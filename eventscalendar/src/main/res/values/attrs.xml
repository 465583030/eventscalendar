<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DateTextView">
        <attr name="isSelected" format="boolean" />
        <attr name="isCurrentMonth" format="boolean" />
        <attr name="hasEvent" format="boolean" />
        <attr name="isToday" format="boolean" />
        <attr name="isPast" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MonthDatesGridLayout">
        <attr name="month" format="integer" />
        <attr name="year" format="integer" />
        <attr name="weekStartDay" format="enum">
            <enum name="SUNDAY" value="1" />
            <enum name="MONDAY" value="2" />
            <enum name="TUESDAY" value="3" />
            <enum name="WEDNESDAY" value="4" />
            <enum name="THURSDAY" value="5" />
            <enum name="FRIDAY" value="6" />
            <enum name="SATURDAY" value="7" />
        </attr>
        <attr name="selectedWeekNo" format="integer" />
    </declare-styleable>

    <declare-styleable name="EventsCalendar">
        <attr name="primaryTextColor" format="color" />
        <attr name="secondaryTextColor" format="color" />
        <attr name="selectionColor" format="color" />
        <attr name="selectedTextColor" format="color" />
        <attr name="eventDotColor" format="color" />
        <attr name="monthTitleColor" format="color" />
        <attr name="weekHeaderColor" format="color" />
        <attr name="isBoldTextOnSelectionEnabled" format="boolean" />
    </declare-styleable>
</resources>